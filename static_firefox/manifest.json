{
  "name": "MyTruth",
  "version": "1.0.0",
  "description": "Track your beliefs and hold yourself accountable.",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo16.png",
      "32": "logo32.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      }
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mytruth@mytruthextensionid.com"
    }
  }
}